    <p><span>NAME:</span> <%= @contact.full_name %></p>
    <p><span>EMAIL:</span> <%= @contact.email %></p>
  </div>

  <div class="notes">
    <p><span>NOTES:</span></p>
    <div class="notes-inner">
      <p><%= @contact.note %></p>
    </div>
  </div>
</div>
